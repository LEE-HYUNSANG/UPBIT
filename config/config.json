{
  "system": {
    "version": "1.1.0",
    "name": "Upbit Auto Trader",
    "description": "업비트 초단타 자동매매 시스템"
  },
  "trading": {
    "markets": ["KRW-BTC", "KRW-ETH", "KRW-XRP"],
    "initial_investment": 100000,
    "base_order_amount": 10000,
    "max_positions": 8,
    "trading_hours": {
      "start": "09:00",
      "end": "23:00",
      "timezone": "Asia/Seoul"
    },
    "volume_filter": {
      "min_daily_volume": 1000000000,
      "min_trade_count": 1000
    },
    "base": {
      "initial_balance": 100000,
      "buy_amount": 10000,
      "max_positions": 8
    },
    "filters": {
      "volume": {
        "enabled": true,
        "top_limit": 30
      },
      "price": {
        "enabled": true,
        "min": 100,
        "max": 500000
      }
    }
  },
  "indicators": {
    "ema": {
      "short_1m": 5,
      "long_1m": 20
    },
    "macd": {
      "fast": 12,
      "slow": 26,
      "signal": 9
    },
    "rsi": {
      "period": 14,
      "oversold": 30,
      "overbought": 70
    },
    "atr": {
      "period": 14,
      "threshold": 0.002
    },
    "volume": {
      "period": 60,
      "threshold": 2.0
    },
    "price": {
      "ma_fast": 5,
      "ma_slow": 20,
      "volatility_period": 20
    }
  },
  "risk_management": {
    "system": {
      "max_daily_loss": 10000,
      "consecutive_loss_limit": 3,
      "cooldown_minutes": 30
    },
    "position": {
      "use_stop_loss": true,
      "stop_loss": 1.0,
      "use_profit_exit": true,
      "profit_target": 1.5,
      "position_size_limit": 0.1
    }
  },
  "timeframe": {
    "mode": 3,
    "use_5m_ema": true
  },
  "logging": {
    "level": "INFO",
    "rotation": {
      "when": "midnight",
      "interval": 1,
      "backup_count": 30
    },
    "metrics_interval": 3600
  },
  "market_analysis": {
    "check_interval_minutes": 15,
    "thresholds": {
      "bull": {
        "trend_strength": 0.5,
        "volatility": 0.012,
        "volume_increase": 1.3,
        "market_dominance": 0.60,
        "confidence_threshold": 0.65
      },
      "bear": {
        "trend_strength": -0.5,
        "volatility": 0.018,
        "volume_increase": 1.5,
        "market_dominance": 0.70,
        "confidence_threshold": 0.65
      }
    },
    "weights": {
      "trend": 0.35,
      "volatility": 0.25,
      "volume": 0.25,
      "market_dominance": 0.15
    }
  },
  "risk": {
  }
} 